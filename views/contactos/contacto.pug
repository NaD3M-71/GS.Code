extends ../layout/app
block styles
    <link rel="stylesheet" type="text/css" href="https://unpkg.com/trix@2.0.8/dist/trix.css">
block contenido 
    
    div(class='py-5')
        h1(id="titulo" class="text-4xl my-5 font-extrabold text-center")= pagina


        div(class="mt-5 md:flex md:gap-4 ")
            div(class="md:w-1/3 shadow rounded")
                img(src=`img/Logov2.png`, alt=`Imagen de Logo` class="hidden md:block  md:size-auto img-contacto ")

                
            div(class="md:w-2/3 bg-white shadow-xl rounded")
                div(class="px-5 py-5 space-y-5 p-4")
                    h2(class="text-2xl leading-6 font-bold text-gray-900") Env√≠ame tu consulta
                    p Formulario de Contacto
                form(action="contacto", method="post") 
                    div(class="p-5" )
                        div(class="rounded border border-slate-600 p-2 my-2")
                            label(class="text-l leading-6 font-bold text-gray-900" for="nombre") Nombre: 
                            input(type="text", name="nombre" class="w-full")
                    
                        div(class="rounded border border-slate-600 p-2 my-2")
                            label(for="email" class="text-l leading-6 font-bold text-gray-900") Email: 
                            input(type="text" name="email" class="w-full")
                    
                        div(class="rounded border border-slate-600 p-2 my-2")
                            label(for="consulta" class="text-l leading-6 font-bold text-gray-900") Consulta: 
                            <input id="x" type="hidden" name="consulta">
                            trix-editor(input="x" class="w-full")
                        div(class="rounded my-2")
                            input(type="submit", value="Enviar Consulta" class="text-white p-4 font-bold border-2 rounded-md bg-slate-600 cursor-pointer hover:bg-slate-800 w-full")
                
        div(class="w-full bg-white my-5 shadow rounded p-5 flex justify-around") Otros medios de contacto  
            h6 WhatsApp: 
                span(class="font-extrabold") +54 2945-553077  
            h6 Email: 
                span(class="font-extrabold") scaglioni96@gmail.com


                    
